generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Acronyms {
  BRL
  USD
  ETH
  EUR
  BTC
}

model User {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  email               String    @unique
  password            String
  currencyInLabel     Acronyms
  currencyInValue     Float
  currencyOutLabel    Acronyms
  currencyOutValue    Float
  lastSend            DateTime?
  minIntervalSend     Int
  toSell              Boolean   @default(true)
}